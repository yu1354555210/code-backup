ul, li, dl, dt, dd {
  list-style: none;
}

a, img {
  -webkit-touch-callout: none;
  /* 禁止长按链接与图片弹出菜单 */
}

html, body {
  -webkit-user-select: none;
  /* 禁止选中文本（如无文本选中需求，此为必选项） */
  user-select: none;
  height: 100%;
}

html {
  touch-action: none;
  -webkit-overflow-scrolling: touch;
}

:focus {
  outline: 0;
}

.wrapper {
  width: 7.5rem;
  height: 100%;
  margin: 0 auto;
  position: relative;
  overflow-x: hidden;

  .weui-btn {
    border-radius: 5000px;
  }

  .vux-header {
    height: 0.88rem;
    background-color: #fff;
    border-bottom: 0.03rem solid #f9f9f9;
    position: relative;
    z-index: 66;

    .vux-header-title {
      color: #3e3c47;
      font-size: 0.34rem;
    }

    .vux-header-left .left-arrow:before {
      border-color: #3e3c47;
    }

    .vux-header-right {
      line-height: normal;
    }
  }
}

img {
  max-width: 100%;
  width: 100%;
  display: block;
}

* {
  box-sizing: border-box;
}

body {
  background-color: #fff;

  .weui-toast {
    top: auto;
    bottom: 20%;
    white-space: nowrap;
    z-index: 33333;
  }

  .vux-loading .weui-toast {
    width: 2rem;
    min-height: 2rem;
    top: 50%;
    left: 50%;
    bottom: auto;
    transform: translate(-50%, -50%);
  }
}

.screen-select {
  .weui-cell {
    padding: 0;
  }

  .vux-cell-value {
    color: #42b9f5;
  }

  .weui-cell__ft {
    display: none;
  }
}

[class^='icon-'], .this_icon {
  display: inline-block;
  vertical-align: middle;
  background-repeat: no-repeat;
  background-size: 100% 100%;
}

.this-title {
  font-size: 0.36rem;
  display: flex;
  align-items: baseline;
  padding: 0 0.2rem;
  color: #636363;

  span {
    color: #909090;
    margin-left: 0.2rem;
    font-size: 0.24rem;
  }
}

.margin-bottom-sm {
  margin-bottom: 0.2rem;
}

.content {
  margin: 0.2rem;

  .card-item {
    border-radius: 0.1rem;
    background-color: #fff;
  }
}

.no-data, .mescroll-empty {
  display: flex;
  flex-direction: column;
  justify-items: center;
  text-align: center;
  align-items: center;
  padding: 1.5rem 0;

  img {
    width: 1.72rem !important;
    height: 1.12rem;
  }

  p, .empty-tip {
    margin-top: 0.2rem;
    font-size: 0.3rem;
    color: #dddddd;
  }
}

.invite-title {
  margin: 0.4rem auto 0.3rem;
  padding: 0 0.25rem;
  color: #454553;
  font-size: 0.3rem;
  display: flex;
  align-items: center;

  &.invite-title-yqfl {
    img {
      width: 0.48rem;
      height: 0.46rem;
    }
  }

  &.invite-title-yqgz {
    img {
      width: 0.38rem;
      height: 0.44rem;
    }
  }

  &.invite-title-yqhy {
    img {
      width: 5.04rem;
      height: 0.35rem;
    }
  }

  &.invite-title-txxz {
    img {
      width: 2.47rem;
      height: 0.47rem;
    }
  }

  &.invite-title-gxyq, &.invite-title-yxyq {
    img {
      width: 2.03rem;
      height: 0.34rem;
    }
  }

  img {
    height: 100%;
    margin-right: 0.1rem;
  }
}

.invite-select-text {
  .weui-cell {
    padding: 0;
  }

  &::after, &::before {
    display: none;
  }

  .weui-cell__ft {
    display: none;
  }
}