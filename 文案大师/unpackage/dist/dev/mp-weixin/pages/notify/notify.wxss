.content {
  padding: 0 24rpx;
}
.notify-item {
  padding: 30rpx 0;
  border-bottom: 2rpx solid #dadcdb;
}
.notify-item:last-child {
  border-bottom: none;
}
.notify-item .notify-title {
  font-size: 28rpx;
  color: #fe581e;
  padding-left: 24rpx;
}
.notify-item .notify-info {
  font-size: 24rpx;
  color: #4a4c4c;
  padding-left: 24rpx;
  margin: 15rpx 0;
}
.notify-item .notify-content {
  height: 144rpx;
  background: #fff;
  -webkit-border-radius: 42rpx;
          border-radius: 42rpx;
  padding: 20rpx 29rpx;
}
.notify-item .notify-content .notify-content-tit {
  font-size: 26rpx;
  color: #313331;
}
.notify-item .notify-content .notify-content-text {
  font-size: 24rpx;
  color: #4a4c4c;
}

