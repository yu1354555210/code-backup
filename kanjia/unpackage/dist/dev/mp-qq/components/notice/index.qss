.notice-content {
  width: 100%;
  height: 100%;
}
.notice {
  width: 100%;
  height: 100%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  overflow: hidden;
  color: #fff;
  font-size: 26rpx;
  padding: 0 40rpx;
  background-color: rgba(0,0,0,0.3);
  z-index: 66;
}
.notice.notice-home {
  background-color: rgba(0,0,0,0.5);
}
.notice.notice-lottery {
  background-color: transparent;
}
.notice image {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}
.notice swiper {
  height: 100%;
}
.notice swiper swiper-item {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.notice swiper swiper-item .text-yellow text {
  color: #fbe884;
}
.notice swiper swiper-item .text-red {
  color: #000;
}
.notice swiper swiper-item .text-red text {
  color: #d03a1c;
}

