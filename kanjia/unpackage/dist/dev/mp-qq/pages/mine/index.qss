page {
  background-color: #f8f7fb;
}
.content {
  padding: 15rpx;
  position: relative;
}
.content::after {
  content: "";
  width: 100%;
  height: 120rpx;
  position: absolute;
  background-color: #2d2793;
  top: 0;
  left: 0;
  z-index: -1;
}
.login-info {
  background-color: #fff;
  padding: 30rpx;
  border-radius: 20rpx;
  box-shadow: 0 6rpx 10rpx rgba(45,39,147,0.17);
  position: relative;
}
.login-info .login-before,
.login-info .login-after {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  font-size: 30rpx;
}
.login-info .login-before image,
.login-info .login-after image {
  width: 124rpx;
  height: 124rpx;
  border-radius: 50%;
  margin-right: 34rpx;
}
.login-info .login-after .user-id {
  margin-top: 10rpx;
  font-size: 22rpx;
  color: #000;
  padding: 5rpx 20rpx 5rpx 5rpx;
  background-color: #f2f2f2;
}
.mine-list {
  margin-top: 30rpx;
  background-color: #fff;
  border-radius: 30rpx;
  overflow: hidden;
}
.mine-list .mine-item {
  padding: 30rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  position: relative;
  border-bottom: 1rpx solid #eee;
}
.mine-list .mine-item:active {
  background-color: #efefef;
}
.mine-list .mine-item:last-child {
  border-bottom: none;
}
.mine-list .mine-item .mine-icon {
  width: 80rpx;
  height: 80rpx;
  margin-right: 20rpx;
}
.mine-list .mine-item .mine-name {
  font-size: 30rpx;
}
.mine-list .mine-item .arrow {
  position: absolute;
  right: 15rpx;
  top: 50%;
  -webkit-transform: translateY(-50%);
          transform: translateY(-50%);
  width: 16rpx;
  height: 30rpx;
}
.getuser-btn {
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
  z-index: 6;
  background-color: transparent !important;
}

