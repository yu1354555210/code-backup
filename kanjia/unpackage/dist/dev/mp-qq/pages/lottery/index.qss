page {
  background-color: #fd572b;
  width: 100%;
}
.content {
  position: relative;
}
.content .lottery-bg {
  position: absolute;
  z-index: -1;
  width: 100%;
  height: 100%;
}
.content .lottery-bg image {
  height: 1206rpx;
}
.notice-box {
  width: 100%;
  height: 110rpx;
  padding: 0 16rpx;
  position: absolute;
  top: 255rpx;
}
.lottery-box {
  position: absolute;
  top: 364rpx;
  left: 50%;
  -webkit-transform: translateX(-50%);
          transform: translateX(-50%);
  width: 630rpx;
  height: 670rpx;
}
.popup-wrapper {
  width: 600rpx;
  background-color: #fff;
  border-radius: 20rpx;
  text-align: center;
  padding: 50rpx 0;
}
.popup-info {
  font-size: 38rpx;
}
.popup-info text {
  display: block;
  color: #f03d0a;
  margin: 20rpx 0;
}
.popup-btn-box {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
}
.popup-btn {
  width: 450rpx;
  height: 100rpx;
  margin-bottom: 20rpx;
  padding: 0;
}
.popup-btn:first-child {
  margin-bottom: 30rpx;
}
.popup-btn image {
  height: 100%;
}

